---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../const";
const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

import { PUBLIC_TRACKING_ID } from "astro:env/client";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<script
			is:inline
			type="text/partytown"
			src={`https://www.googletagmanager.com/gtag/js?id=${PUBLIC_TRACKING_ID}`}
		></script>

		<script type="text/partytown" define:vars={{ PUBLIC_TRACKING_ID }}>
			window.dataLayer = window.dataLayer || [];
			window.gtag = function () {
				dataLayer.push(arguments);
			};
			gtag("js", new Date());
			gtag("config", PUBLIC_TRACKING_ID);
		</script>
	</head>

	<body class="bg-black text-white min-h-screen flex flex-col">
		<Navbar />
		<main class="flex-1 w-full mx-auto px-4 mt-80">
			<slot />
		</main>
		<Footer />
	</body>
</html>
